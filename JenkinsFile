pipeline {
    agent { label 'kanchala-agent' }
    stages {
        stage('My simple stage') {
            steps {
                sh "robot ep3.robot"
                robot outputPath: './'
                script {
                    String failed_count = tm('${ROBOT_FAILED}')
                    String passed_count = tm('${ROBOT_PASSED}')
                    echo "Passed Tests: ${passed_count}"
                    echo "Failed Tests: ${failed_count}"
                }
            }
        }
    }
}